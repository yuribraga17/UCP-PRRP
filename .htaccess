RewriteEngine On

RewriteRule ^([a-zA-Z0-9_-]+)$ index.php?p=$1
RewriteRule ^personagem/([0-9]+)$ index.php?p=personagem&pers=$1

RewriteRule ^verapp/aceitar/([0-9]+)$ index.php?p=verapp&id=$1&action=aceitar
RewriteRule ^verapp/recusar/([0-9]+)$ index.php?p=verapp&id=$1&action=recusado
RewriteRule ^verapp/reenviar/([0-9]+)$ index.php?p=verapp&id=$1&action=reenviar
RewriteRule ^verapp/([0-9]+)$ index.php?p=verapp&id=$1
